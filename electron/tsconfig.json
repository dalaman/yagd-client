{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "../build",
    "rootDir": "..",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "baseUrl": ".."
  },
  "include": ["./**/*.ts", "../src/@types/**/*.d.ts"]
}
